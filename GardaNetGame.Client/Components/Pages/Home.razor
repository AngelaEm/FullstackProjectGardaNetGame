@page "/"

@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<div id="gardaimage">
	<div class="container mb-6">
		<div class="row justify-content-center align-items-center text-center">
			<div class="col-12">
				<h1 class="display-4 pt-5">Gårda NetGame</h1>
				<h3 class="pt-2">- Bäst på onlinespel</h3>
			</div>
		</div>
	</div>
</div>

<div class="m-3"></div>

<div class="text-center text-lg-start mt-3">
	<div class="container pt-4">
		<div class="row justify-content-center">
			
			@* Kolumn 1 *@
			<div class="pt-4 col-lg-4 col-md-12 mb-0 mb-md-0 text-center">
				<button @onclick="NavigateToEvents" id="EventLinkButton" class="btn mt-4 card-shadow" style="border: 2px solid #FE0404; background-color: #383F46; color: #FBFBFA;">
					<h4>Events!</h4>
					<h10>Klicka här för mer information</h10>
				</button>
			</div>

			@* Kolumn 2 *@
			<div class="pt-4 col-lg-4 col-md-12 mb-4 mb-md-0 text-center">
				<button @onclick="NavigateToGames" id="StoreLinkButton" class="btn mt-4 card-shadow" style="border: 2px solid #FE0404; background-color: #383F46; color: #FBFBFA;">
					<h4>Nya Spel!</h4>
					<h10>Klicka här för att se Butiken</h10>
				</button>
			</div>
        </div>
     </div>
</div>



	<div id="carouselExample" class="carousel slide pt-3 mt-4" data-bs-ride="carousel">
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="https://teamgardastorage.blob.core.windows.net/gardanetgameimages/bradspel.JPG" class="d-block w-75 mx-auto carousel-img-size" alt="..."> <!-- Adjusted size -->
			</div>
			<div class="carousel-item">
				<img src="https://teamgardastorage.blob.core.windows.net/gardanetgameimages/awGarda.JPG" class="d-block w-75 mx-auto carousel-img-size" alt="..."> <!-- Adjusted size -->
			</div>
			<div class="carousel-item">
				<img src="https://teamgardastorage.blob.core.windows.net/gardanetgameimages/lekaGarda.JPG" class="d-block w-75 mx-auto carousel-img-size" alt="..."> <!-- Adjusted size -->
			</div>
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>

